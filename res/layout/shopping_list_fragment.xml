<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <ListView
        android:id="@+id/masterListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addItemButton"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/searchBar" >

    </ListView>

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/masterListView"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Search for Item"
        android:textStyle="italic" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/masterListView"
        android:layout_alignParentRight="true"
        android:text="go" />

    <Button
        android:id="@+id/addItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/masterListView"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/showLowListButton"
        android:text="new Item" />

    <Button
        android:id="@+id/showLowListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addItemButton"
        android:layout_alignBottom="@+id/addItemButton"
        android:layout_alignRight="@+id/masterListView"
        android:layout_marginRight="16dp"
        android:text="Goin&apos; Shopping" />

</RelativeLayout>